{%extends "layout.njk"%}

{%block header%}
<title>Gerenciador de Receitas</title>
{%endblock%}

{%block content%}
<section>

    <h1>Gerenciar receitas</h1>

    <div class="admin-recipe-list">
        
       {%for item in items%}
            <div class="recipe" id="{{loop.index0}}">
                <img src="{{item.image}}" alt="Imagem de {{item.title}}">
                <div>
                    <h3>{{item.title}}</h3>
                    <p>{{item.author}}</p>
                    <a href="/admin/recipes/{{loop.index0}}">Vizualizar</a>
                </div>
            </div>
        {%endfor%}

    </div>
</section>

<script src="/script.js"></script>
{%endblock%}