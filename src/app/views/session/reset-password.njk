{%extends "layout.njk"%}

{%block header%}
<title>Login de Usu√°rio</title>
{%endblock%}

{%block content%}
<section class="login"> 

    <form method="POST" action="/admin/reset-password">

        <div class="recipe-header">
            <h1>Redefinir Senha</h1>
        </div>

        <div class="recipe-item">
            <div>Email</div>
            <input type="text" name="email" placeholder="Digite seu email cadastrado">
        </div>
        
        <div class="recipe-item">
            <div>Nova Senha</div>
            <input type="password" name="password" placeholder="Digite sua nova senha">
        </div>
        
        <div class="recipe-item">
            <div>Repetir Senha</div>
            <input type="password" name="repeatPassword" placeholder="Repita sua nova senha">
        </div>

        <input type="hidden" name="token" value="{{token}}">

        <div class="button-options">
            <button type="submit">Atualizar Senha</button>
        </div> 

    </form>

</section>
{%endblock%}