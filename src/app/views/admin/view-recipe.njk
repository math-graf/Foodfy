{%extends "layout.njk"%}

{%block header%}
<title>View-Recipe</title>
{%endblock%}

{%block content%}
<section>
    
    <div class="recipe-header">
        <h1>Receita: {{recipe.title}}</h1>
        <span>    
            <a href="/admin/recipes/{{recipe.id}}/edit">Editar receita</a>
        </span>
    </div>

    <div class="recipe-image">
        <img class="selected-photo" src="{{recipePhotos[0].path}}" alt="Imagem de {{recipe.title}}">
        <div class="recipe-photos">
            
            {% for photo in recipePhotos %}
                    <div 
                        class="photo-button"
                        onclick="selectPhoto(this)"
                        >
                            <img src="{{photo.path}}" alt="Imagem de {{recipe.title}}">
                    </div>
            {% endfor %}

        </div>
        <h1>{{recipe.title}}</h1>
        <p>{{recipe.author}}</p>
    </div>
    
    <div class="recipe-content">
        <h2>Ingredientes</h2>
        <ul>
            {%for line in recipe.ingredients%}
                <li>{{line}}</li>
            {%endfor%}
        </ul>
    </div>

    <div class="recipe-content">
        <h2>Modo de preparo</h2>
        {%for line in recipe.preparation%}
            <p>{{line}}</p>
        {%endfor%}
    </div>

    <div class="recipe-content">
        <h2>Informações adicionais</h2>
        <p>{{recipe.information}}</p>
    </div>

</section>
{%endblock%}

{% block script %}
<script src="/scripts/script.js"></script>
{% endblock %}