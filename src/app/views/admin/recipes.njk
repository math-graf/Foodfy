{%extends "layout.njk"%}

{%block header%}
<title>Gerenciador de Receitas</title>
{%endblock%}

{%block content%}
<section>

    <h1>Gerenciar receitas</h1>

    <div class="admin-recipe-list">
        
       {%for recipe in recipes%}
            <div class="recipe" id="{{recipe.recipe_id}}">
                <img src="{{recipe.path}}" alt="Imagem de {{recipe.title}}">
                <div>
                    <h3>{{recipe.title}}</h3>
                    <p>{{recipe.author}}</p>
                    <a href="/admin/recipes/{{recipe.recipe_id}}">Vizualizar</a>
                </div>
            </div>
        {%endfor%}

    </div>
</section>

{%endblock%}