{%extends "layout.njk"%}

{%block header%}
<title>Gerenciador de Chefs</title>
{%endblock%}

{%block content%}
<section>

    <h1>Gerenciar Chefs</h1>

    <div class="chefs-list">
        {% for chef in chefs %}
            <div class="chef-card" id="{{chef.id}}">
                <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}">
                <div>
                    <p>{{chef.name}}</p>
                    <a href="/admin/chefs/{{chef.id}}">Vizualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>
</section>

<script src="/script.js"></script>
{%endblock%}