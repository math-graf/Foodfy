{%extends "layout.njk"%}

{%block header%}
<title>Gerenciador de Chefs</title>
{%endblock%}

{%block content%}
<section>

    <div class="user-header">
        <h1>Gerenciar Chefs</h1>
        <span>
            <a href="/admin/chefs/create">Novo</a>
        </span>
    </div>

    <div class="list">
        {% for chef in chefs %}
            <div class="card" id="{{chef.id}}">
                <img src="{{chef.path}}" alt="Imagem de {{chef.name}}">
                <div>
                    <p>{{chef.name}}</p>
                    <a href="/admin/chefs/{{chef.id}}">Vizualizar</a>
                </div>
            </div>
        {% endfor %}
    </div>
</section>

<script src="/scripts/script.js"></script>
{%endblock%}