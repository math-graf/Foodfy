{%extends "layout.njk"%}

{%block header%}
<title>Cadastrar Chef</title>
{%endblock%}

{%block content%}
<section> 

    <form method="POST" action="/admin/chefs" enctype="multipart/form-data">

        <div class="recipe-header">
            <h1>Cadastrando Chef</h1>
            <span>    
                <button type="submit">Cadastrar</button>
            </span>    
        </div>

        <div class="recipe-item">
            <div>Nome</div>
            <input type="text" name="name" placeholder="Escreva o nome do chef">
        </div>

        <div class="recipe-item">
            <div>Avatar</div>
            <div class="input-container">
                <input id="input-chef-avatar" type="file" name="photos" accept="image/*">
                <p id="select-chef-avatar-button">Selecionar</p>
            </div>
        </div>

    </form>

</section>
{%endblock%}

{% block script %}
<script src="/scripts/create-edit.js"></script>
{% endblock script %}