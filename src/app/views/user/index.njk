{%extends "layout.njk"%}

{%block content%}
<div class="main">
    <div class="description">
        <h2>As melhores receitas</h2>
        <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>
    </div>
    <img src="chef.png" alt="Chef">
</div>

<section>
    <h2>Mais acessadas</h2>
    <div class="recipe-list">

        {%for recipe in recipes%}
            <div class="recipe" id="{{recipe.recipe_id}}">
                <img src="{{recipe.path}}" alt="Imagem de {{recipe.title}}">
                <h3>{{recipe.title}}</h3>
                <p>{{recipe.author}}</p>
            </div>
        {%endfor%}

    </div>
</section>
<script src="/script.js"></script>
{%endblock%}